  "technologies": {
    "frontend_dependencies": [
      "react@^19.2.0",
      "react-dom@^19.2.0",
      "@mui/material@^7.3.4",
      "@mui/icons-material@^7.3.4",
      "@emotion/react@^11.14.0",
      "@emotion/styled@^11.14.1",
