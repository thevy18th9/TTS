  "project_structure": {
    "root": "TTS/",
    "frontend": "tts-frontend/",
    "backend": "english-tts-api/",
    "documentation": "docs/",
    "main_files": {
      "frontend_entry": "tts-frontend/src/App.tsx",
      "backend_server": "english-tts-api/server_web_tts.js",
      "api_service": "tts-frontend/src/services/api.ts"
    }
  },
  "endpoints": {
    "health_check": "GET /health",
    "root": "GET /",
    "search_news": "POST /search-news",
