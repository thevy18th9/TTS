{
  "project": {
    "name": "Smart News Reader AI - Multi-Language TTS System",
    "version": "1.0.0",
    "completion_date": "November 2024",
    "status": "Completed",
    "description": "A complete web application for converting text to speech in multiple languages with news search integration, featuring voice search, accessibility features, and real-time news reading capabilities."
  },
  "architecture": {
    "type": "Full-stack Web Application",
    "frontend": {
      "framework": "React 19",
      "language": "TypeScript",
      "ui_library": "Material-UI (MUI) v7",
      "state_management": "React Hooks",
      "http_client": "Axios",
      "styling": "Custom CSS with Material-UI",
      "build_tool": "Create React App"
    },
    "backend": {
      "framework": "Express.js",
      "runtime": "Node.js",
      "language": "JavaScript",
      "server_type": "RESTful API",
      "cors": "Enabled",
      "port": 8004
    }
  },
  "apis_and_services": {
    "news_api": {
      "provider": "NewsData.io",
      "endpoint": "https://newsdata.io/api/1/news",
      "features": [
        "Multi-language news search",
        "RSS feed aggregation",
        "Article content extraction"
      ],
      "supported_languages": ["vi", "en", "zh"]
    },
    "tts_api": {
      "provider": "ElevenLabs TTS",
      "alternative": "Google TTS (google-tts-api)",
      "features": [
        "Multi-language text-to-speech",
        "Voice selection",
        "Audio format": "MP3"
      ]
    },
    "stt_api": {
      "provider": "Web Speech API",
      "features": [
        "Browser-based speech recognition",
        "Multi-language support",
        "Real-time transcription"
      ]
    }
  },
  "features": {
    "core_features": [
      "Speech-to-Text (STT)",
      "Text-to-Speech (TTS)",
      "News Search and Reading",
      "Multi-language Support"
    ],
    "accessibility_features": [
      "F1 - Help/Instructions",
      "F2 - Start/Stop Voice Recording",
      "F3 - Search News",
      "F4 - Replay First Article",
      "Screen Reader Mode",
      "Sound Cues",
      "Large Text Mode",
      "Keyboard Shortcuts Display"
    ],
    "ui_features": [
      "Dark Mode",
      "Responsive Design",
      "Glassmorphism Effects",
      "Real-time Audio Player",
      "News Grid Layout",
      "Sidebar Navigation",
      "Accessibility Panel"
    ],
    "advanced_features": [
      "Real-time News Streaming",
      "Article Content Extraction",
      "Voice Command Recognition",
      "Search History",
      "Audio Playback Control"
    ]
  },
